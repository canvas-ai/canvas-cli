  "license": "AGPL-3.0-or-later",
  "type": "module",
  "bin": {
    "context": "bin/context",
    "ws": "bin/ws",
    "canvas": "bin/canvas"
  },
  "scripts": {
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint \"**/*.js\" --fix",
    "format": "prettier --write \"**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/canvas-ai/canvas-cli.git"
  },
  "keywords": [
    "cli",
    "canvas",
    "context",
    "llm",
    "ollama",
    "shell"
  ],
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "axios": "^1.8.3",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "conf": "^13.1.0",
    "date-fns": "^4.1.0",
    "detect-libc": "^2.0.3",
    "figlet": "^1.8.0",
    "install": "^0.13.0",
    "ip": "^2.0.1",
    "json2csv": "^5.0.6",
    "llamaindex": "^0.6.15",
    "minimist": "^1.2.8",
    "mkdirp": "^3.0.1",
    "node-machine-id": "^1.1.12",
    "npm": "^11.2.0",
    "ollama": "^0.5.9",
    "open": "^8.4.0",
    "socket.io-client": "^4.8.1",
    "strip-ansi": "^6.0.1",
    "uuid": "^10.0.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^15.9.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "pkg": {
    "outputPath": "bin",
    "targets": [
      "linux",
      "macos",
      "win"
    ],
    "assets": [
      "./node_modules/axios/dist/node/axios.cjs"
    ]
  }
}
